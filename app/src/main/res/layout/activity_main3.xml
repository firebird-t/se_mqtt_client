<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btconnect"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="37dp"
        android:text="Conectar ao Watson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/desligargeral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="22dp"
        android:text="Desligar lâmpadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ligageral"
        app:layout_constraintTop_toBottomOf="@+id/desligaluz3" />

    <Button
        android:id="@+id/ligageral"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="16dp"
        android:text="Ligar lâmpadas"
        app:layout_constraintBaseline_toBaselineOf="@+id/desligargeral"
        app:layout_constraintEnd_toStartOf="@+id/desligargeral"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/desligaluz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Desligar"
        app:layout_constraintEnd_toStartOf="@+id/desligaluz3"
        app:layout_constraintStart_toEndOf="@+id/desligaluz1"
        app:layout_constraintTop_toBottomOf="@+id/ligaluz2" />

    <Button
        android:id="@+id/desligaluz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Desligar"
        app:layout_constraintEnd_toStartOf="@+id/desligaluz2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ligaluz1" />

    <Button
        android:id="@+id/desligaluz3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:text="Desligar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/desligaluz2"
        app:layout_constraintTop_toBottomOf="@+id/ligaluz3" />

    <Button
        android:id="@+id/ligaluz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Ligar Luz 1"
        app:layout_constraintBaseline_toBaselineOf="@+id/ligaluz2"
        app:layout_constraintEnd_toStartOf="@+id/ligaluz2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ligaluz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="36dp"
        android:text="Ligar Luz 2"
        app:layout_constraintEnd_toStartOf="@+id/ligaluz3"
        app:layout_constraintStart_toEndOf="@+id/ligaluz1"
        app:layout_constraintTop_toBottomOf="@+id/btconnect" />

    <Button
        android:id="@+id/ligaluz3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ligar Luz 3"
        app:layout_constraintBaseline_toBaselineOf="@+id/ligaluz2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ligaluz2" />
</android.support.constraint.ConstraintLayout>